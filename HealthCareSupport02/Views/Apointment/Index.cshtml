@model IEnumerable<HealthCareSupport02.Models.Apointment>

@{
    ViewBag.Title = "Index";
}
<h4>
    Appointment
    <span class="alert-danger">@Session["Msg"]</span>
</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProblemName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Doctor.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patient.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProblemName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Doctor.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.Name)
        </td>
        @if (Session["Adlogin"].ToString() != "" || Session["Dologin"].ToString() != "" || Session["Palogin"].ToString() != "")
        {
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id, p = item.PatientId, d = item.DoctorId }) |
        </td>   
        }
    </tr>
    }

</table>
