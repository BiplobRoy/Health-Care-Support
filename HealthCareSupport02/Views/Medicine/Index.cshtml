@model IEnumerable<HealthCareSupport02.Models.Medicine>

@{
    ViewBag.Title = "Index";
}
<h4>Medicine</h4>

@if (Session["Adlogin"].ToString() != "")
{
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}


@using (Html.BeginForm())
{
    <div>
        <table>
            <tr>
                <th>
                    <h4>Medicine Group: </h4>
                </th>
                <th>
                    @Html.DropDownList("MedicineGroupId", null, htmlAttributes: new { @class = "form-control" })
                </th>
                <th>
                    <input type="submit" value="Search">
                </th>
            </tr>
        </table>
    </div>
}
<div class="container search">
    <form method="post" action="">
        <table>
            <tr>
                <th>
                    <h4>Medicine: </h4>
                </th>
                <th>
                    <input type="text" name="search" id="search" value="@ViewBag.seaarch" />
                </th>
                <th>
                    <input type="submit" name="btmSearch" value="Search" />
                </th>
            </tr>
        </table>
    </form>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MedicineGroup.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicineGroup.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
