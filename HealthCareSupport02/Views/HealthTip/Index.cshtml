@model IEnumerable<HealthCareSupport02.Models.HealthTip>

@{
    ViewBag.Title = "Index";
}
<h4>Health Tips</h4>
@if (Session["Adlogin"].ToString() != "" || Session["Dologin"].ToString() != "")
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<div class="container search">
    <form method="post" action="">
        <table>
            <tr>
                <th>
                    <h4>Health Tips: </h4>
                </th>
                <th>
                    <input type="text" name="search" id="search" value="@ViewBag.seaarch" />
                </th>
                <th>
                    <input type="submit" name="btmSearch" value="Search" />
                </th>
            </tr>
        </table>
    </form>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id })
        </td>
    </tr>
    }

</table>