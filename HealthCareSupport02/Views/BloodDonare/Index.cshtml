@model IEnumerable<HealthCareSupport02.Models.BloodDonare>

@{
    ViewBag.Title = "Donor List";
}
<h4>Blood Donor</h4>
<h4 style="text-align:right;"><a class="btn btn-default" style="color: forestgreen" href="http://localhost:11391/BloodDonare/Create">Be_A_Donor</a></></h4>
@using (Html.BeginForm())
{
    <div>
        <table>
            <tr>
                <th>
                    <h4> Area: </h4>
                </th>
                <th>
                    @Html.DropDownList("SubCityId", null, "Select One ", htmlAttributes: new { @class = "form-control" })
                </th>
                <th>
                    <h4> Blood Group: </h4>
                </th>
                <th>
                    @Html.DropDownList("BloodGroupId", null, "Select One ", htmlAttributes: new { @class = "form-control" })
                </th>
                <th>
                    <input type="submit" value="Search">
                </th>
            </tr>
        </table>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BloodGroup.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubCity.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BloodGroup.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCity.Name)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
