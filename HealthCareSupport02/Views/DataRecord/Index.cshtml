@model IEnumerable<HealthCareSupport02.Models.DataRecord>

@{
    ViewBag.Title = "Index";
}
<h4>Data Record</h4>
@if (Session["Palogin"].ToString() != "")
            {
<p>
    @Html.ActionLink("Create New", "Create")
</p>
            }


<div class="container search">
    <form method="post" action="">
        <table>
            <tr>
                <th>
                    <h4>Problem Name: </h4>
                </th>
                <th>
                    <input type="text" name="search" id="search" value="@ViewBag.seaarch" />
                </th>
                <th>
                    <input type="submit" name="btmSearch" value="Search" />
                </th>
            </tr>
        </table>
    </form>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Patient.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProblemDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Patient.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProblemDate)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = item.Id, p = item.PatientId })
        </td>
    </tr>
    }

</table>
