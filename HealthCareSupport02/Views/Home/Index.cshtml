@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1 style="color: blue">Health Care Support</h1>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
                <li data-target="#myCarousel" data-slide-to="4"></li>
                <li data-target="#myCarousel" data-slide-to="5"></li>
                <li data-target="#myCarousel" data-slide-to="6"></li>
                <li data-target="#myCarousel" data-slide-to="7"></li>
                <li data-target="#myCarousel" data-slide-to="8"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/Image/bangladeshi medicines_10690.jpg" style="height:300px; width: 100%">
                </div>

                <div class="item">
                    <img src="~/Image/Blood_Donation-732X549-thumbnail.jpg" style="width:100%; height:300px">
                </div>
                <div class="item">
                    <img src="~/Image/bmteam0.png" style="width:100%; height:300px">
                </div>

                <div class="item">
                    <img src="~/Image/Daily-sun_Pharmaceutical-_Companies-Bangladesh_picture.jpg" style="width:100%; height:300px">
                </div>

                <div class="item">
                    <img src="~/Image/Doctor_using_dims.png" style="width:100%; height:300px">
                </div>

                <div class="item">
                    <img src="~/Image/ICU.jpg" style="width:100%; height:300px">
                </div>

                <div class="item">
                    <img src="~/Image/maxresdefault.jpg" style="width:100%;height:300px">
                </div>

                <div class="item">
                    <img src="~/Image/operationssaal-gettyimages-532331964-k.jpeg" style="width:100%; height:300px">
                </div>
                <div class="item">
                    <img src="~/Image/pharmaceutical-industry-in-.png" style="width:100%; height:300px">
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h2 style="color:blueviolet">Patient</h2>
        <p>
            We help you to connect with Doctor
        </p>
        <p><a class="btn btn-default" href="http://localhost:11391/Patient/Create">Create Account &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2 style="color: forestgreen">Doctor</h2>
        <p>Hello Doctor you can help patient from your home</p>
        <p><a class="btn btn-default" href="http://localhost:11391/Doctor/Create">Create Account &raquo;</a></p>
    </div>
    <div class="col-md-4">
        <h2 style="color: orangered">Blood Donare</h2>
        <p>Donet Blood & save life. You can be a angle for a family </p>
        <p><a class="btn btn-default" href="http://localhost:11391/BloodDonare/Create">Become Donare &raquo;</a></p>
    </div>

    <div class="col-md-4">
        <h2 style="color: blueviolet">Health Tips</h2>
        <p>Ambulance is ready to service. Just Call and Wait only 30 minute, be smile, keep happy</p>
        <p><a class="btn btn-default" href="http://localhost:11391/HealthTip/Index">Get Advise&raquo;</a></p>
    </div>

    @if (Session["Palogin"].ToString() != "" || Session["Palogin"].ToString() != "")
    {
        <div class="col-md-4">
            <h2 style="color: blueviolet">Ambulance</h2>
            <p>Ambulance is ready to service. Just Call and Wait only 30 minute, be smile, keep happy</p>
            <p><a class="btn btn-default" href="http://localhost:11391/Ambulance/Index">Get Ambulance&raquo;</a></p>
        </div>
    }
</div>